<div class="reserv container-fluid">
    <div class="row min-vh-100 flex-column flex-md-row">
        <%- include("templates/bootstrap")%>
            <%- include("templates/nav")%>
                <link rel="stylesheet" href="/habitaciones.css">
                <main class="col back_hab px-0 flex-grow-1">
                    <div class="container py-3">
                        <article>
                            <% if(reservaHab){ %>
                                <form action="/guardarPago" method="post">
                                    <div class="containerreserva">
                                        <div class="derreserva">
                                            <h3>Pagos</h3>
                                            <div>
                                                <div class="row mt-4">

                                                    <div class="col">
                                                        <label for="">Nombre del cliente: </label>
                                                        <br>
                                                        <input class="input-as-label" type="text"
                                                            value="<%= reservaHab.nombre_cliente %>" readonly>
                                                    </div>

                                                    <input name="idreservahab" class="input-as-label" type="hidden"
                                                        value="<%= reservaHab.IdReservaH %>">


                                                    <div class="col">
                                                        <label for="">Monto a Pagar: </label>
                                                        <br>
                                                        <input name="totalp" class="input-as-label" type="text"
                                                            value="<%= reservaHab.TotalP %>" readonly>
                                                    </div>

                                                    <div class="col">
                                                        <label for="">La Casa de mi viejo </label>
                                                        <br>
                                                        <img src="/logolcdmv.png" width="30%" alt="">
                                                    </div>
                                                </div>

                                            </div>
                                        </div>

                                        <div class="row mt-4 ps-4 pe-4">
                                            <div class="col">

                                                <label class="mt-3">Tipo de Pago</label>
                                                <div class="form mt-1">
                                                    <select class=" inputde form-control" name="tipopago" id="tipopago"
                                                        required>
                                                        <option value="tarjeta">Tarjeta</option>
                                                        <option value="efectivo">Efectivo</option>
                                                        <option value="pagomovil">Pago Movil</option>
                                                    </select>
                                                </div><label class="mt-3">Comprobante</label>
                                                <div class="form mt-1">
                                                    <select class=" inputde form-control" name="comprobante"
                                                        id="combrobante" required>
                                                        <option value="boleta">Boleta</option>
                                                        <option value="factura">Factura</option>
                                                    </select>
                                                </div>
                                                <label class="mt-3">Fecha Emitida:</label>
                                                <div class=" form mt-1">
                                                    <input name="fechaemitida" type="date" class="inputde form-control"
                                                        required>
                                                </div>
                                            </div>

                                            <div class="col-md-8 contain">
                                                <div class="row">
                                                    <label class="column-title">Informacion del alojamiento:</label>
                                                    <button type="submit" class="column">Generar</button>
                                                </div>

                                                <div class="row">
                                                    <div class="container-detalle">
                                                        <div class="col mt-4">Nombre:
                                                            <input class="inputp" type="text"
                                                                value="<%= reservaHab.nombre_cliente %>" disabled>
                                                        </div>
                                                        <div class="col mt-4">Monto:
                                                            <input class="inputp" type="text"
                                                                value="<%= reservaHab.TotalP %>" disabled>
                                                        </div>
                                                        <div class="col mt-4 mb-4">Empresa:
                                                            <input class="inputp" type="text"
                                                                value="La Casa de mi Viejo" disabled>
                                                        </div>

                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </form>
                                <% } %>
                        </article>
                    </div>
                </main>
    </div>
</div>